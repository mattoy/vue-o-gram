{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "*":[
        "src/*",
        "@eslint-types/typescript-eslint/*"
      ]
    } 
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "dev/main.ts", "test/*.spec.ts"]
}
 